= form_for @match, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :outing_id, :class => 'control-label'
    .controls
      = f.text_field :outing_id, :class => 'text_field'
  .control-group
    = f.label :round_1_id, :class => 'control-label'
    .controls
      = f.text_field :round_1_id, :class => 'text_field'
  .control-group
    = f.label :round_2_id, :class => 'control-label'
    .controls
      = f.text_field :round_2_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), matches_path, :class => 'btn'

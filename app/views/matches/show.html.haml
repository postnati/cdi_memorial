- model_class = Match
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:outing_id) + ':'
  %br
  = @match.outing_id
%p
  %strong= model_class.human_attribute_name(:round_1_id) + ':'
  %br
  = @match.round_1_id
%p
  %strong= model_class.human_attribute_name(:round_2_id) + ':'
  %br
  = @match.round_2_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), matches_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_match_path(@match), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), match_path(@match), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

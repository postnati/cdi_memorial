= form_for @prize, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :player_id, :class => 'control-label'
    .controls
      = f.text_field :player_id, :class => 'text_field'
  .control-group
    = f.label :competition_id, :class => 'control-label'
    .controls
      = f.text_field :competition_id, :class => 'text_field'
  .control-group
    = f.label :outing_id, :class => 'control-label'
    .controls
      = f.text_field :outing_id, :class => 'text_field'
  .control-group
    = f.label :portion, :class => 'control-label'
    .controls
      = f.text_field :portion, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), prizes_path, :class => 'btn'

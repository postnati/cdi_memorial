- model_class = Prize
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:player_id) + ':'
  %br
  = @prize.player_id
%p
  %strong= model_class.human_attribute_name(:competition_id) + ':'
  %br
  = @prize.competition_id
%p
  %strong= model_class.human_attribute_name(:outing_id) + ':'
  %br
  = @prize.outing_id
%p
  %strong= model_class.human_attribute_name(:portion) + ':'
  %br
  = @prize.portion

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), prizes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_prize_path(@prize), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), prize_path(@prize), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

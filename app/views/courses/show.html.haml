- model_class = Course
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @course.name
%p
  %strong= model_class.human_attribute_name(:slope) + ':'
  %br
  = @course.slope
%p
  %strong= model_class.human_attribute_name(:rating) + ':'
  %br
  = @course.rating
%p
  %strong= model_class.human_attribute_name(:hole_1_par) + ':'
  %br
  = @course.hole_1_par
%p
  %strong= model_class.human_attribute_name(:hole_2_par) + ':'
  %br
  = @course.hole_2_par
%p
  %strong= model_class.human_attribute_name(:hole_3_par) + ':'
  %br
  = @course.hole_3_par
%p
  %strong= model_class.human_attribute_name(:hole_4_par) + ':'
  %br
  = @course.hole_4_par
%p
  %strong= model_class.human_attribute_name(:hole_5_par) + ':'
  %br
  = @course.hole_5_par
%p
  %strong= model_class.human_attribute_name(:hole_6_par) + ':'
  %br
  = @course.hole_6_par
%p
  %strong= model_class.human_attribute_name(:hole_7_par) + ':'
  %br
  = @course.hole_7_par
%p
  %strong= model_class.human_attribute_name(:hole_8_par) + ':'
  %br
  = @course.hole_8_par
%p
  %strong= model_class.human_attribute_name(:hole_9_par) + ':'
  %br
  = @course.hole_9_par

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), courses_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_course_path(@course), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), course_path(@course), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

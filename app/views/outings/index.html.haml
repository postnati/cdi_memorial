- model_class = Outing
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:course_id)
      %th= model_class.human_attribute_name(:season_id)
      %th= model_class.human_attribute_name(:week_number)
      %th= model_class.human_attribute_name(:slope)
      %th= model_class.human_attribute_name(:rating)
      %th= model_class.human_attribute_name(:played_at)
      %th= model_class.human_attribute_name(:hole_1_par)
      %th= model_class.human_attribute_name(:hole_2_par)
      %th= model_class.human_attribute_name(:hole_3_par)
      %th= model_class.human_attribute_name(:hole_4_par)
      %th= model_class.human_attribute_name(:hole_5_par)
      %th= model_class.human_attribute_name(:hole_6_par)
      %th= model_class.human_attribute_name(:hole_7_par)
      %th= model_class.human_attribute_name(:hole_8_par)
      %th= model_class.human_attribute_name(:hole_9_par)
      %th= model_class.human_attribute_name(:hole_1_handicap)
      %th= model_class.human_attribute_name(:hole_2_handicap)
      %th= model_class.human_attribute_name(:hole_3_handicap)
      %th= model_class.human_attribute_name(:hole_4_handicap)
      %th= model_class.human_attribute_name(:hole_5_handicap)
      %th= model_class.human_attribute_name(:hole_6_handicap)
      %th= model_class.human_attribute_name(:hole_7_handicap)
      %th= model_class.human_attribute_name(:hole_8_handicap)
      %th= model_class.human_attribute_name(:hole_9_handicap)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @outings.each do |outing|
      %tr
        %td= link_to outing.id, outing_path(outing)
        %td= outing.course_id
        %td= outing.season_id
        %td= outing.week_number
        %td= outing.slope
        %td= outing.rating
        %td= outing.played_at
        %td= outing.hole_1_par
        %td= outing.hole_2_par
        %td= outing.hole_3_par
        %td= outing.hole_4_par
        %td= outing.hole_5_par
        %td= outing.hole_6_par
        %td= outing.hole_7_par
        %td= outing.hole_8_par
        %td= outing.hole_9_par
        %td= outing.hole_1_handicap
        %td= outing.hole_2_handicap
        %td= outing.hole_3_handicap
        %td= outing.hole_4_handicap
        %td= outing.hole_5_handicap
        %td= outing.hole_6_handicap
        %td= outing.hole_7_handicap
        %td= outing.hole_8_handicap
        %td= outing.hole_9_handicap
        %td=l outing.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_outing_path(outing), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), outing_path(outing), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_outing_path, :class => 'btn btn-primary'

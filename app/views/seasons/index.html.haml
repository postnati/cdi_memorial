- model_class = Season
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:year)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @seasons.each do |season|
      %tr
        %td= link_to season.id, season_path(season)
        %td= season.year
        %td=l season.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_season_path(season), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), season_path(season), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_season_path, :class => 'btn btn-primary'

- model_class = Competition
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @competition.name
%p
  %strong= model_class.human_attribute_name(:category) + ':'
  %br
  = @competition.category
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @competition.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), competitions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_competition_path(@competition), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), competition_path(@competition), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

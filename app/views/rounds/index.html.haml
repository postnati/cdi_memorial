- model_class = Round
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:outing_id)
      %th= model_class.human_attribute_name(:owner_id)
      %th= model_class.human_attribute_name(:player_id)
      %th= model_class.human_attribute_name(:handicap)
      %th= model_class.human_attribute_name(:played_at)
      %th= model_class.human_attribute_name(:hole_1)
      %th= model_class.human_attribute_name(:hole_2)
      %th= model_class.human_attribute_name(:hole_3)
      %th= model_class.human_attribute_name(:hole_4)
      %th= model_class.human_attribute_name(:hole_5)
      %th= model_class.human_attribute_name(:hole_6)
      %th= model_class.human_attribute_name(:hole_7)
      %th= model_class.human_attribute_name(:hole_8)
      %th= model_class.human_attribute_name(:hole_9)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @rounds.each do |round|
      %tr
        %td= link_to round.id, round_path(round)
        %td= round.outing_id
        %td= round.owner_id
        %td= round.player_id
        %td= round.handicap
        %td= round.played_at
        %td= round.hole_1
        %td= round.hole_2
        %td= round.hole_3
        %td= round.hole_4
        %td= round.hole_5
        %td= round.hole_6
        %td= round.hole_7
        %td= round.hole_8
        %td= round.hole_9
        %td=l round.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_round_path(round), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), round_path(round), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_round_path, :class => 'btn btn-primary'

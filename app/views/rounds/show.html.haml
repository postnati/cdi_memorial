- model_class = Round
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:outing_id) + ':'
  %br
  = @round.outing_id
%p
  %strong= model_class.human_attribute_name(:owner_id) + ':'
  %br
  = @round.owner_id
%p
  %strong= model_class.human_attribute_name(:player_id) + ':'
  %br
  = @round.player_id
%p
  %strong= model_class.human_attribute_name(:handicap) + ':'
  %br
  = @round.handicap
%p
  %strong= model_class.human_attribute_name(:played_at) + ':'
  %br
  = @round.played_at
%p
  %strong= model_class.human_attribute_name(:hole_1) + ':'
  %br
  = @round.hole_1
%p
  %strong= model_class.human_attribute_name(:hole_2) + ':'
  %br
  = @round.hole_2
%p
  %strong= model_class.human_attribute_name(:hole_3) + ':'
  %br
  = @round.hole_3
%p
  %strong= model_class.human_attribute_name(:hole_4) + ':'
  %br
  = @round.hole_4
%p
  %strong= model_class.human_attribute_name(:hole_5) + ':'
  %br
  = @round.hole_5
%p
  %strong= model_class.human_attribute_name(:hole_6) + ':'
  %br
  = @round.hole_6
%p
  %strong= model_class.human_attribute_name(:hole_7) + ':'
  %br
  = @round.hole_7
%p
  %strong= model_class.human_attribute_name(:hole_8) + ':'
  %br
  = @round.hole_8
%p
  %strong= model_class.human_attribute_name(:hole_9) + ':'
  %br
  = @round.hole_9

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), rounds_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_round_path(@round), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), round_path(@round), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

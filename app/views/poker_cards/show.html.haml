- model_class = PokerCard
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:player_id) + ':'
  %br
  = @poker_card.player_id
%p
  %strong= model_class.human_attribute_name(:outing_id) + ':'
  %br
  = @poker_card.outing_id
%p
  %strong= model_class.human_attribute_name(:card_value) + ':'
  %br
  = @poker_card.card_value
%p
  %strong= model_class.human_attribute_name(:reason) + ':'
  %br
  = @poker_card.reason

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), poker_cards_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_poker_card_path(@poker_card), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), poker_card_path(@poker_card), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
